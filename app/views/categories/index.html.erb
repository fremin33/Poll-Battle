<div class="header-title" style="margin-top: 60px;
  margin-bottom: 30px; text-align: center;">
  <h1>All areas</h1>
</div>
<div class= "container-fluide">
  <div class="row">
    <% @categories.each do |category| %>
      <div class= "col-xs-12 col-sm-6 col-md-3 ">
        <div class="card">
          <div class="card-img" style="width: 100%; height: 180px;">
            <%= cl_image_tag category.picture.path %>
          </div>
          <div class="gradient" style="width: 100%; height: 180px; background: linear-gradient(to right, rgba(6,0,2,1) 12%,rgba(6,0,2,1) 47%,rgba(6,0,5,1) 90%);">
          </div>
          <div class="card-title">
            <%= link_to category.name, category_path(category) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
