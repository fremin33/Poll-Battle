<h2 class="formTitle">Forgot your password?</h2>

<div class="block" style="padding-top: 0; padding-bottom: 0">

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, required: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Reset my password" %>
  </div>
<% end %>
</div>


