<h2 class="formTitle">Welcome.</h2>

<div class="block" style="padding-top: 0; padding-bottom: 0; background:none">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, style: 'width:200px', placeholder: "contact@pall-battle.com" %>
        <%= f.input :password, required: false %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br/>
        <% end -%>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign in", style: 'width:100%' %>
      <%- if devise_mapping.omniauthable? %>
          <div class="facebook-button text-center" style="width: 250px; margin-top: 20px ">
            <%- resource_class.omniauth_providers.each do |provider| %>
                <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-primary", style: 'width:250px; margin-bottom:20px' %>
                <br/>
            <% end -%>
          </div>
      <% end -%>
      </div>
  <% end %>
</div>
<div class="shared_log" style="background: none; border:none; ">
  <div class="form-group"><%= render "devise/shared/links" %></div>
</div>
