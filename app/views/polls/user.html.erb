<div class="container-fluid" style="padding: 0px;">
  <div class="main">
    <p class="description">Welcome to your own interface. You can modify your poll here !</p>

    <div class="stats-container">
      <div class="stat">
        <div class="number">
          <% if @user_votes.nil? %>
            0
          <% else %>
            <%= @user_votes %>
          <% end %>
        </div>
        <div class="text">Votes</div>
      </div>

      <div class="stat">
        <div class="number">
          <% if @user_polls.nil? %>
            0
          <% else %>
            <%= @user_polls %>
          <% end %>
        </div>
        <div class="text">Battle</div>
      </div>

      <div class="stat active">
        <div class="number">
          <% if @user_reviews.nil? %>
            0
          <% else %>
            <%= @user_reviews %>
          <% end %>
        </div>
        <div class="text">Reviews</div>
      </div>

      <div class="stat">
        <div class="number">0</div>
        <div class="text">Following</div>
      </div>
    </div>

<div class="container-fluid" style="padding: 0px">
  <div class="row" style="margin: 0px">
    <% @polls.each do |poll| %>
    <div class="col-xs-12 col-md-4" style="padding: 0px">
      <div class="cardm">
        <div class="head">
          <h2>
            <% if poll.user.facebook_picture_url? %>
              <%= image_tag poll.user.facebook_picture_url %>
            <% else %>
              <%= cl_image_tag poll.user.picture.path %>
            <% end %>
          </h2>
          <p><%= poll.user.username %></p>
          <h4><%= poll.title %></h4>
        </div>
        <div class="body">
          <%= link_to poll_path(poll) do %>
          <div class="cardc1">
            <div class="clip-left">
              <div class="left-wrapper">
                <%= cl_image_tag poll.responses[0].picture.path%>
              </div>
            </div>
            <div class="clip-right">
              <div class="right-wrapper">
                <%= cl_image_tag poll.responses[1].picture.path %>
              </div>
            </div>
            <% end %>
          </div>
          <div class="foot">
            <div class="box">
              <a href=""><span class="ion-heart"></span> <%= poll.responses.first.votes.size %> Votes</a>
              <a href=""><span class="ion-eye"></span> <%= poll.reviews.size %> Reviews</a>
              <a href=""><span class="ion-chatbox"></span> <%= poll.responses.last.votes.size %> Votes</a>
            </div>
          </div>
        </div>
      </div>
    </div>
      <% end %>
  </div>

</div>
