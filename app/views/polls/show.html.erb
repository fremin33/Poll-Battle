<h1><%= @poll.title %></h1>

<div class= "container">
  <div class= "responses">
    <div class="first-response">
      Response : <%= @first_response.label %>
      <div class="first-response-count">
        Votes : <%= @first_response_count %>
      </div>
    </div>
    <div class="second-response">
      Response <%= @second_response.label %>
      <div class="second-response-count">
        Votes : <%= @second_response_count %>
      </div>
      <div class="form-vote">
        <%= simple_form_for([@first_response, @vote]) do |f| %>
          <%= f.submit @first_response.label, class: "btn btn-large btn-primary" %>
        <% end %>

        <%= simple_form_for([@second_response, @vote]) do |f| %>
          <%= f.submit @second_response.label, class: "btn btn-large btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
